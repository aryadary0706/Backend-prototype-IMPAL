
# --- AI inference (Modal) ---
# Your Modal FastAPI endpoint expects the uploaded file under field name: "image"
# If you change the modal signature, you can override it here.
INFERENCE_URL=https://swagenough--plantdoc-inference-api-plantdiseasemodel-predict.modal.run
INFERENCE_FIELD_NAME=image
INFERENCE_TIMEOUT_MS=30000

# --- Backend configuration ---
# URL to your database instance (e.g. PostgreSQL)
DATABASE_URL=postgresql://user:password@localhost:5432/database_name

# Secret key used for signing JWT tokens
JWT_SECRET=replace-with-a-secure-random-string

# Supabase project URL and anon key (if using Supabase)
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_ANON_KEY=your-supabase-anon-key

# Port for the backend server to listen on
PORT=3000

# Threshold below which predictions are considered low confidence
LOW_CONFIDENCE_THRESHOLD=0.5
